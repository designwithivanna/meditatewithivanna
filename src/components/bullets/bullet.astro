---
type Props = {
  iconColor?: string;
  iconBgColor?: string;
};

const { iconColor = "white", iconBgColor = "#2B2A26" } = Astro.props;
---

<div class="flex gap-4 text-left">
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="flex-shrink-0"
  >
    <circle cx="12" cy="12" r="12" fill={iconBgColor}></circle>
    <path d="M18 7L9.53846 17L7 14.003" fill={iconBgColor}></path>
    <path
      d="M18 7L9.53846 17L7 14.003"
      stroke={iconColor}
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
  <p class="leading-6 xl:leading-[30px]">
    <slot />
  </p>
</div>
