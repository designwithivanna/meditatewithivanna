---
type Props = {
  image: string;
  label: string;
  title: string;
  description: string;
};

const { image, label, title, description } = Astro.props;
---

<div class="px-5 py-6 text-center rounded-3xl border border-[#565656]">
  <p
    class="text-[#8C6546] uppercase tracking-[0.56px] text-sm leading-[30px] font-semibold"
  >
    {label}
  </p>
  <p class="mt-[5px] capitalize text-[28px] leading-[36px]">{title}</p>
  <div class="w-[160px] h-[160px] bg-blue-200 mx-auto my-[29px]"></div>
  <p>{description}</p>
  <div
    class="h-[54px] w-[54px] bg-[#EEECDA] rounded-full flex justify-center items-center mt-5"
  >
