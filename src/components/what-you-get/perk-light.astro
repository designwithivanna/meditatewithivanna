---
type Props = {
  number: string;
  title: string;
};

const { number, title } = Astro.props;
---

<div
  class="bg-white rounded-3xl border border-[#565656] p-5 lg:p-[30px] text-[#2B2A26]"
>
  <div class="flex items-center gap-5">
    <span
      class="text-xl lg:text-[25px] size-[46px] items-center inline-flex justify-center bg-[#EEECDA] rounded-full"
    >
      {number}
    </span>
    <h3 class="text-2xl lg:text-[36px] leading-[46px]">{title}</h3>
  </div>
  <p class="lg:text-xl leading-[30px] text-left mt-4">
    <slot />
  </p>
</div>
