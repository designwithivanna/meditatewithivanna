---
type Props = {
  number: string;
  title: string;
};

const { number, title } = Astro.props;
---

<div
  class="bg-white rounded-3xl border border-[#565656] p-3 md:p-5 lg:p-[30px] text-[#2B2A26]"
>
  <div class="flex items-center gap-3 md:gap-5">
    <span
      class="md:text-xl shrink-0 lg:text-[25px] size-8 lg:size-[46px] items-center inline-flex justify-center bg-[#EEECDA] rounded-full"
    >
      {number}
    </span>
    <h3 class="md:text-2xl lg:text-[36px] text-left md:leading-[46px]">
      {title}
    </h3>
  </div>
  <p class="lg:text-xl lg:leading-[30px] text-left mt-3 md:mt-4">
    <slot />
  </p>
</div>
